@page
@model ProjetoWeb2.Pages.Disciplinas.IndexModel

@{
    ViewData["Title"] = "Disciplinas";
}
<link rel="stylesheet" type="text/css" media="screen" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<link href="/wwwroot/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Disciplinas</h1>


<p>
    <a asp-page="Create"><button class="btn btn-primary">Criar Nova</button></a>
</p>
<style>
table, th, td {
  border:1px solid black;
}
</style>
<table class="table table-bordered table-striped">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Dificuldade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Creditos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].HoraAula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].HoraRelogio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].qtdTeorica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].qtdPratica)
            </th>
            <th class="col-xs-1 text-center">
                @Html.DisplayNameFor(model => model.Disciplina[0].Ementa)
            </th>
            <th class="col-xs-3 text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Disciplina) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dificuldade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraAula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraRelogio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qtdTeorica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qtdPratica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ementa)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><button class="btn btn-primary"><i class="fa fa-floppy-o"></i>E</button></a> |
                <a asp-page="./Details" asp-route-id="@item.Id"><button class="btn btn-primary"><i class="fa fa-floppy-o"></i>D</button></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"><button class="btn btn-primary"><i class="fa fa-floppy-o"></i>X</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
